{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "es2015",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*", "../shared/*"]
    }
  },
  "include": ["src", "shared"],
  "exclude": ["node_modules"]
}
